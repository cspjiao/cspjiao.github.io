	file = {IEEE Xplore Abstract Record:files/431/9511798.html:text/html;Jin et al_2023_A Survey of Community Detection Approaches.pdf:files/430/Jin et al_2023_A Survey of Community Detection Approaches.pdf:application/pdf},
