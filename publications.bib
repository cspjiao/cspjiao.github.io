	note = {Conference Name: IEEE Transactions on Network and Service Management},
	keywords = {Cloud computing, Decision making, deep neural network, edge computing, Internet of Things, meta reinforcement learning, Neural networks, Servers, Task analysis, task offloading, Training},
	pages = {3448--3459},
	file = {IEEE Xplore Abstract Record:files/434/9448034.html:text/html;Qu et al_2021_DMRO.pdf:files/433/Qu et al_2021_DMRO.pdf:application/pdf},
